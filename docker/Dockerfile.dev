# docker/Dockerfile.dev
# Docker image برای development environment پایدار Flutter

FROM ubuntu:22.04

# متغیرهای محیطی
ENV FLUTTER_VERSION=3.35.1
ENV DART_VERSION=3.9.0
ENV ANDROID_SDK_VERSION=34.0.0
ENV DEBIAN_FRONTEND=noninteractive

# نصب dependencies پایه
RUN apt-get update && apt-get install -y \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    libglu1-mesa \
    openjdk-11-jdk \
    wget \
    && rm -rf /var/lib/apt/lists/*

# ایجاد user برای development
RUN useradd -m -s /bin/bash developer
USER developer
WORKDIR /home/developer

# نصب Flutter
RUN git clone https://github.com/flutter/flutter.git -b stable --depth 1
ENV PATH="/home/developer/flutter/bin:${PATH}"

# Pre-download Dart SDK
RUN flutter precache

# تنظیمات Flutter
RUN flutter config --no-analytics
RUN flutter doctor

# نصب Android SDK (اختیاری)
ENV ANDROID_HOME=/home/developer/android-sdk
RUN mkdir -p ${ANDROID_HOME} && \
    cd ${ANDROID_HOME} && \
    wget -q https://dl.google.com/android/repository/commandlinetools-linux-9477386_latest.zip && \
    unzip commandlinetools-linux-9477386_latest.zip && \
    rm commandlinetools-linux-9477386_latest.zip

ENV PATH="${ANDROID_HOME}/cmdline-tools/bin:${PATH}"

# ایجاد دایرکتوری کار
WORKDIR /workspace

# کپی کردن فایل‌های dependency
COPY pubspec.yaml pubspec.lock ./

# نصب dependencies
RUN flutter pub get

# Volume برای source code
VOLUME ["/workspace"]

# Port برای hot reload
EXPOSE 8080

# دستور پیش‌فرض
CMD ["flutter", "run", "--hot", "--host", "0.0.0.0", "--port", "8080"]
